<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="it.nhan.clubseuro.activities.DetailActivity">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="- Logo -> "
            android:textColor="@color/colorAccent"
            android:textSize="24sp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/igClub1"
            android:layout_width="match_parent"
            android:layout_height="65dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:textStyle="italic"
            android:text=" - NameClub -> " />

        <TextView
            android:id="@+id/txtNameClub1"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:text=""
            android:textColor="#0e0e0e"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="3.74" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="32.87"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:textStyle="italic"
            android:text=" - Natonal -> " />

        <TextView
            android:id="@+id/txtNational1"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:text=""
            android:textColor="#0e0e0e"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="3.74" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="14.20"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:textStyle="italic"
            android:text=" - SLVĐ -> " />

        <TextView
            android:id="@+id/txtNumber1"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:text=""
            android:textColor="#0e0e0e"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="1.07" />
    </LinearLayout>
</LinearLayout>
